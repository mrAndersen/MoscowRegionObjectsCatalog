{% extends '::admin_base.html.twig' %}

{% block body -%}
    <h1>Список типов объектов</h1>
    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Название</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.id }}</td>
                <td>{{ entity.name }}</td>
                <td>
                    <a class="button info" href="{{ path('object_type_edit',{id:entity.id}) }}">Редактировать</a>
                    <a class="button danger" href="{{ path('object_type_delete',{id:entity.id}) }}">Удалить</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% endblock %}
