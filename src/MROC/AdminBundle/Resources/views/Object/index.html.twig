{% extends '::admin_base.html.twig' %}

{% block body -%}
    <h1>Список объектов ({{ count }})</h1>
    <div class="filters">
        Сортировка
        <select name="filters">
            <option value="{{ path('object',{'sort':'id','order':'asc'}) }}">По Id 1>9</option>
            <option value="{{ path('object',{'sort':'id','order':'desc'}) }}">По Id 9>1</option>
            <option value="{{ path('object',{'sort':'owner','order':'asc'}) }}">По Владельцу A>Z</option>
            <option value="{{ path('object',{'sort':'owner','order':'desc'}) }}">По Владельцу Z>A</option>
            <option value="{{ path('object',{'sort':'address','order':'asc'}) }}">По Адресу A>Z</option>
            <option value="{{ path('object',{'sort':'address','order':'desc'}) }}">По Адресу Z>A</option>
        </select>
    </div>
    <table class="records_list">
        <thead>
        <tr>
            <th>Id</th>
            <th>Рейтинг(Отзывы)</th>
            <th>Координаты | Адрес</th>
            <th>Владелец</th>
            <th>Тип объекта</th>
            <th>Тип продукции</th>
            <th>Действия</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.id }}</td>
                <td>
                    {% if entity.rating %}
                        {{ entity.rating }}
                        ({{ entity.votes }})
                    {% else %}
                        &mdash;
                    {% endif %}
                </td>
                <td>{{ entity.coordinates }} | {{ entity.address }}</td>
                <td>{{ entity.owner }}</td>
                <td>{{ entity.objectType.name }}</td>
                <td>{{ entity.saleType.name }}</td>
                <td>
                    <a class="button info" href="{{ path('object_edit',{id:entity.id}) }}">Редактировать</a>
                    <a class="button danger" href="{{ path('object_delete',{id:entity.id}) }}">Удалить</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if pages > 0 %}
        <div class="pages">
            {% for i in 1..pages %}
                {% if i == current + 1 %}
                    <a class="page button info active" href="{{ path('object',{'page': i-1}) }}">{{ i }}</a>
                {% else %}
                    <a class="page button info" href="{{ path('object',{'page': i-1}) }}">{{ i }}</a>
                {% endif %}
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}
