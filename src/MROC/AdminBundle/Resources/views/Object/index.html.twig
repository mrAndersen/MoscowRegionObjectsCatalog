{% extends '::admin_base.html.twig' %}

{% block body -%}
    <h1>Список объектов</h1>
    <table class="records_list">
        <thead>
        <tr>
            <th>Id</th>
            <th>Рейтинг</th>
            <th>Координаты</th>
            <th>Адрес</th>
            <th>Владелец</th>
            <th>Тип продукции</th>
            <th>Тип объекта</th>
            <th>Действия</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.id }}</td>
                <td>{{ entity.rating }}</td>
                <td>{{ entity.coordinates }}</td>
                <td>{{ entity.address }}</td>
                <td>{{ entity.owner }}</td>
                <td>{{ entity.objectType.name }}</td>
                <td>{{ entity.saleType.name }}</td>
                <td>
                    <a class="button info" href="{{ path('object_edit',{id:entity.id}) }}">Редактировать</a>
                    <a class="button danger" href="{{ path('object_delete',{id:entity.id}) }}">Удалить</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
