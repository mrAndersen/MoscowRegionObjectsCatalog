{% extends '::admin_base.html.twig' %}

{% block body -%}
    <h1>Создание объекта</h1>

    {{ form_start(form) }}
    {{ form_errors(form) }}

    {{ form_row(form.address) }}
    {{ form_row(form.owner) }}
    {{ form_row(form.object_type) }}
    {{ form_row(form.sale_type) }}
    {{ form_row(form.user) }}
    {{ form_row(form.registered_land) }}
    {% if is_granted('ROLE_MUNICIPAL') %}
        <div>
            {{ form_label(form.municipal_id) }}
            {{ form_errors(form.municipal_id) }}
            {{ form_widget(form.municipal_id, {'attr': {'disabled':'disabled'} }) }}
        </div>
    {% else %}
        {{ form_row(form.municipal_id) }}
    {% endif %}
    {{ form_row(form.image) }}
    {{ form_row(form.override) }}

    {{ form_widget(form.save) }}

    {{ form_widget(form._token) }}
{% endblock %}