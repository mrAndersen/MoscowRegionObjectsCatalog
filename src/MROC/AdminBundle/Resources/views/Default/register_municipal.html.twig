{% extends '::admin_base.html.twig' %}
{% block javascripts %}
    <script>
        $(function(){
            var gen = $('.generate');

            gen.click(function(){
                var length = 8,
                        charset = "abcdefghijklnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789",
                        retVal = "";
                for (var i = 0, n = charset.length; i < length; ++i) {
                    retVal += charset.charAt(Math.floor(Math.random() * n));
                }
                $('#password').val(retVal);
            });
        })
    </script>
{% endblock %}
{% block body -%}
    <h1>Регистрация муниципала</h1>
    <form method="post" action="{{ path('mroc_admin_register_municipal') }}" enctype="application/x-www-form-urlencoded">
        <div class="row">
            <label>Имя пользователя</label>
            <input type="text" id="username" name="username" checked required="required">
        </div>
        <div class="row">
            <label>Пароль</label>
            <input type="text" id="password" name="password" checked required="required">
            <a class="button info generate">☼</a>
        </div>
        <div class="row">
            <label>E-mail</label>
            <input type="text" id="email" name="email" checked required="required">
        </div>
        <div class="row">
            <label>Номер</label>
            <input type="number" id="number" name="number" checked required="required">
        </div>
        <input type="submit" class="button primary" value="Создать">
    </form>
{% endblock %}