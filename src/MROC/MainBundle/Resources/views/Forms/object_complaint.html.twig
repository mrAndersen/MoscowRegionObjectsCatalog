<script>
    $(function(){
        var no_schema = 'Объекта нет на схеме.';
        var foreign = 'Присутствуют мигранты.';
        var garbage = 'На объекте мусор.';
        var bad_service = 'Плохое обслуживание.';

        $('.fast').click(function(e){
            var textarea = $('textarea[name="problem"]');
            var text = eval($(this).attr('data-text'));

            textarea.val(textarea.val() + text + "\n");
        });
    });
</script>
<form action="{{ path('_xhr_mroc_main_object_complaint') }}" method="post" enctype="multipart/form-data" class="object-complaint-form">
    <div class="top">
        <label>
            МинПотреб<input type="checkbox" name="where[minpotreb]">
            <span class="small">Министерство потребительского рынка и услуг МО</span>
        </label>
        <label>
            Управление ФАС по МО<input type="checkbox" name="where[fas]">
            <span class="small">Управления Федеральной антимонопольной службы по Московской области</span>
        </label>
        <label>
            Роспотребнадзор<input type="checkbox" name="where[rospotrebnadzor]">
        </label>
        <label>
            УФМС<input type="checkbox" name="where[ufms]">
            <span class="small">Управление Федеральной Миграционной Службы</span>
        </label>
        <label>Росадмнадзор<input type="checkbox" name="where[rosadmnadzor]"></label>
        <label>
            ОМСУ<input type="checkbox" name="where[omsu]">
            <span class="small">Органы местного самоуправления</span>
        </label>
        <label>
            МВД<input type="checkbox" name="where[mvd]">
            <span class="small">Министерство внутренних дел</span>
        </label>
    </div>
    <div class="bottom">
        <div class="left">
            <textarea required="required" rows="6" name="problem" placeholder="Опишите проблему, или воспользуйтесь быстрыми ссылками снизу."></textarea>
            <a class="fast" data-text="no_schema">Нет на схеме</a>
            <a class="fast" data-text="foreign">Мигранты</a>
            <a class="fast" data-text="garbage">Мусор</a>
            <a class="fast" data-text="bad_service">Некачественное обслуживание</a>
            <label>Фотография<input type="file" name="image" required="required"></label>
        </div>
        <div class="right">
            <input type="hidden" name="object_id" value="{{ id }}">
            <div class="row">
                <input type="text" name="name" placeholder="ФИО" required="required">
            </div>
            <div class="row">
                <input type="text" name="tel" placeholder="Телефон">
            </div>
            <div class="row">
                <input type="text" name="email" placeholder="Email">
            </div>
            <div class="row">
                <img src="{{ captcha }}">
                <input type="text" name="captcha" placeholder="Тест с картинки">
            </div>
            <div class="row">
                <button type="submit" class="button blue center fixed200 send-global-complaint">Отправить</button>
            </div>
        </div>
    </div>

</form>